{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "@typescript-eslint/no-var-requires": "off"
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  }
}

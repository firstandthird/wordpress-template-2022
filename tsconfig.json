{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "inlineSources": true,
    "sourceRoot": "src",
    "outDir": "wp-content/themes/ft-theme/dist/",
    "declaration": false,
    "removeComments": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true
  },
  "include": ["src/ts/**/*", "src/index.ts"]
}

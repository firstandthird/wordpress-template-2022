<?xml version="1.0"?>
<ruleset name="First + Third">
	<description>Custom ruleset for First + Third.</description>

	<!-- What to scan -->
	<file>./wp-content/themes/</file>
	<!-- Ignoring Files and Folders -->
	<exclude-pattern>./wp-content/themes/twenty*</exclude-pattern>

	<!-- How to scan -->
  <arg name="extensions" value="php"/> <!-- Limit to PHP files -->
	<arg value="s"/> <!-- Show sniffs -->

	<!-- Rules: WordPress VIP Coding Standards -->
  <rule ref="WordPress-VIP-Go">
    <exclude name="Generic.Arrays.DisallowShortArraySyntax" />
    <exclude name="Generic.WhiteSpace.DisallowSpaceIndent" />
    <exclude name="Generic.WhiteSpace.ScopeIndent" />
    <exclude name="WordPress.PHP.DisallowShortTernary" />
    <exclude name="WordPress.WhiteSpace.PrecisionAlignment" />
  </rule>
  <config name="minimum_supported_wp_version" value="6.0-"/>

  <!-- Rules: F+T Coding Standards -->
  <rule ref="Generic.Formatting.MultipleStatementAlignment"/>
  <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
  <rule ref="PEAR.WhiteSpace.ScopeIndent">
      <properties>
          <property name="indent" value="2"/>
          <property name="exact" value="true"/>
      </properties>
  </rule>
  <rule ref="PEAR.Functions.FunctionCallSignature">
      <properties>
          <property name="indent" value="2"/>
          <property name="allowMultipleArguments" value="true" />
      </properties>
  </rule>
  <rule ref="PEAR.Formatting.MultiLineAssignment" />
</ruleset>

{
  "name": "wordpress-template-2022",
  "version": "0.2.0",
  "description": "A new WordPress template for First+Third.",
  "keywords": [
    "wordpress",
    "template",
    "firstandthird"
  ],
  "homepage": "https://github.com/firstandthird/wordpress-template-2022#readme",
  "bugs": {
    "url": "https://github.com/firstandthird/wordpress-template-2022/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/wordpress-template-2022.git"
  },
  "license": "ISC",
  "author": "First+Third",
  "scripts": {
    "browser-sync": "cross-env NODE_ENV=development browser-sync start --proxy \"base-theme.test\" --host=\"base-theme.test\" --no-inject-changes --files=\"./\"",
    "compose": "docker-compose up -d",
    "decompose": "docker-compose down",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css-app\" \"npm run dev:css-editor\" \"npm run dev:js\"",
    "dev:css-app": "cross-env NODE_ENV=development tailwindcss -i ./src/css/app.css -o ./wp-content/themes/base-theme/css/app.css --postcss",
    "dev:css-editor": "cross-env NODE_ENV=development tailwindcss -i ./src/css/editor-style.css -o ./wp-content/themes/base-theme/css/editor-style.css --postcss",
    "dev:js": "cross-env NODE_ENV=development ./node_modules/.bin/esbuild ./src/js/app.js --bundle --outfile=./wp-content/themes/base-theme/js/app.js",
    "production": "cross-env NODE_ENV=production concurrently \"npm run production:css-app\" \"npm run production:css-editor\" \"npm run production:js\"",
    "production:css-app": "cross-env NODE_ENV=development tailwindcss -i ./src/css/app.css -o ./wp-content/themes/base-theme/css/app.css --postcss --minify",
    "production:css-editor": "cross-env NODE_ENV=development tailwindcss -i ./src/css/editor-style.css -o ./wp-content/themes/base-theme/css/editor-style.css --postcss --minify",
    "production:js": "cross-env NODE_ENV=development ./node_modules/.bin/esbuild ./src/js/app.js --bundle --outfile=./wp-content/themes/base-theme/js/app.js --minify",
    "watch": "cross-env NODE_ENV=development concurrently \"npm run watch:css-app\" \"npm run watch:css-editor\" \"npm run watch:js\"",
    "watch-sync": "cross-env NODE_ENV=development concurrently \"npm run browser-sync\" \"npm run watch\"",
    "watch:css-app": "cross-env NODE_ENV=development tailwindcss -i ./src/css/app.css -o ./wp-content/themes/base-theme/css/app.css --postcss --watch",
    "watch:css-editor": "cross-env NODE_ENV=development tailwindcss -i ./src/css/editor-style.css -o ./wp-content/themes/base-theme/css/editor-style.css --postcss --watch",
    "watch:js": "cross-env NODE_ENV=development ./node_modules/.bin/esbuild ./src/js/app.js --bundle --outfile=./wp-content/themes/base-theme/js/app.js --watch"
  },
  "dependencies": {
    "domassist": "^2.3.1",
    "domodule": "^8.1.0"
  },
  "devDependencies": {
    "@jeffreyvr/tailwindcss-tailpress": "^2.0.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.2.1",
    "cross-env": "^6.0.3",
    "esbuild": "^0.12.24",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "postcss": "^8.4.18",
    "postcss-import": "^14.0.0",
    "postcss-nested-ancestors": "^2.0.0",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.0"
  },
  "volta": {
    "node": "18.12.1"
  }
}
